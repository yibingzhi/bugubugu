        </if>
        <if test="query.postTime != null and query.postTime!=''">
            <![CDATA[ and  v.post_time=str_to_date(#{query.postTime}, '%Y-%m-%d') ]]>
        </if>
        <if test="query.text != null and query.text!=''">
